// Colors
@widget-bg-color: #525252;
@widget-fg-color: #c4c4c4;

// Opacity
@opa-cover: 255;

scr {
    bgOpa: @opa-cover;
}

scrollbar {
  bgColor: @widget-bg-color;
  padAll: 7;
  width: 5;
  opa: 40;
}

scrollbar: scrolled {
  opa: 255;
}

button {
  bgOpa: 255;
  bgColor: @background-color;
  shadowColor: @shadow-color;
}

theme {
  name: "test";
}
